<!DOCTYPE html>
<html>
  <head>
    <title>Slackr</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('slackricon.ico'), :rel => 'icon', :type => "image/x-icon" %>
    <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/1.0.0/dist/progressbar.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/LoadGo/2.2/loadgo.min.js"></script>
    <!-- <script src="https://rawgit.com/kottenator/jquery-circle-progress/1.1.3/dist/circle-progress.js"></script> -->
    <!-- <%= javascript_include_tag "https://www.google.com/jsapi" %> -->
    <!-- <%= javascript_include_tag "/js/highcharts.js" %> -->

  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <%= link_to 'Slackr', :root %>
      |
      <%= link_to 'New Slack', new_slack_path %>
      |
      <% if user_signed_in? %>
        <span>Hello, <%= current_user.first_name %>!</span>
      |
      <%= link_to 'Sign Out', session_path, method: :delete %>
        <% else %>
        <%= link_to 'Sign In', new_session_path %>
        |
        <%= link_to 'Sign Up', new_user_path %>
        |
        <% end %>
    </nav>
    <hr>

    <div class="container-fluid">
      <% if flash[:notice].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>


    <div class="container-fluid">
      <%= yield %>

    </div>
  </body>
</html>
